<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/spacing"
    android:layout_marginTop="@dimen/spacing"
    android:layout_marginRight="@dimen/spacing"
    app:cardElevation="3dp"
    >

    <RelativeLayout
        android:id="@+id/msg_rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        android:padding="4dp">

        <ImageView
            android:id="@+id/msg_item_iv_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginTop="@dimen/spacing"
            android:layout_toLeftOf="@+id/msg_item_iv_in"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msg_item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="dfgjdfkl;g等会估计你看好的韩国的进口了获得"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/msg_item_tv_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="dfgjdfkl;g等会估计你看好的韩国你看好的韩国的进口了获得"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/msg_item_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="2017-1-9 15:23"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/divider" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>